<Page x:Class="WPF.User.EditProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Edit Profile">

    <Grid Background="#ECF0F1">
        <TextBlock Text="⚙ Chỉnh sửa thông tin cá nhân" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20"/>

        <StackPanel Margin="50,70,50,20">
            <TextBlock Text="Họ và tên:" FontSize="14" FontWeight="Bold"/>
            <TextBox Height="30" Margin="0,5,0,10"/>

            <TextBlock Text="Email:" FontSize="14" FontWeight="Bold"/>
            <TextBox Height="30" Margin="0,5,0,10"/>

            <TextBlock Text="Số điện thoại:" FontSize="14" FontWeight="Bold"/>
            <TextBox Height="30" Margin="0,5,0,10"/>

            <Button Content="💾 Lưu thay đổi" Background="#27AE60" Foreground="White" FontSize="16" Height="40" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
