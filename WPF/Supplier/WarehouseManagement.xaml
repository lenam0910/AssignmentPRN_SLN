<Page x:Class="WPF.Supplier.WarehouseManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quản Lý Kho Hàng" Loaded="Page_Loaded" Width="600">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Quản Lý Kho Hàng" FontSize="24" FontWeight="Bold" Foreground="#37474F" Margin="10"/>

        <!-- Content Area -->
        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <!-- Warehouse DataGrid -->
            <DataGrid x:Name="WarehouseDataGrid" AutoGenerateColumns="False" Height="300" Margin="0,10,0,10"
                      ItemsSource="{Binding Warehouses}" SelectionMode="Single" CanUserAddRows="False"
                      SelectionChanged="WarehouseDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding WarehouseId}" Width="50"/>
                    <DataGridTextColumn Header="Tên Kho" Binding="{Binding WarehouseName}" Width="*"/>
                    <DataGridTextColumn Header="Vị Trí" Binding="{Binding Location}" Width="*"/>
                    <DataGridTextColumn Header="Sức Chứa" Binding="{Binding Capacity}" Width="100"/>
                    <DataGridTemplateColumn Header="Thao Tác" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Sửa" Padding="5" Margin="2" Click="EditWarehouse_Click"/>
                                    <Button Content="Xóa" Padding="5" Margin="2" Click="DeleteWarehouse_Click" Background="#D32F2F" Foreground="White"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Thêm Kho Mới" Height="40" Width="150" Background="#4CAF50" Foreground="White" Click="AddWarehouse_Click"/>
        </StackPanel>

        <!-- Overlay - Popup Add Warehouse -->
        <Grid x:Name="PopupOverlay" Visibility="Collapsed" Background="#80000000"
              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
              Grid.RowSpan="2" Panel.ZIndex="10">
            <Border Background="White" BorderBrush="#ced4da" BorderThickness="1"
                    Padding="20" Width="400" CornerRadius="10"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Margin="10">
                    <TextBlock Text="Thêm Kho Mới" FontSize="20" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,10"/>
                    <TextBox x:Name="txtWarehouseName" Margin="10"  />
                    <TextBox x:Name="txtLocation" Margin="10"/>
                    <TextBox x:Name="txtCapacity" Margin="10" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,20,10,0">
                        <Button Content="Lưu" Width="120" Height="35" Background="#0078D4" Foreground="White" Click="SaveWarehouse_Click"/>
                        <Button Content="Hủy" Width="120" Height="35" Background="Gray" Foreground="White" Click="CancelWarehouse_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Overlay - Popup Edit Warehouse -->
        <Grid x:Name="EditWarehousePopup" Visibility="Collapsed" Background="#80000000"
              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
              Grid.RowSpan="2" Panel.ZIndex="10">
            <Border Background="White" BorderBrush="#ced4da" BorderThickness="1"
                    Padding="20" Width="400" CornerRadius="10"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Margin="10">
                    <TextBlock Text="Sửa Kho" FontSize="20" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,10"/>
                    <TextBox x:Name="txtEditWarehouseName" Margin="10"  />
                    <TextBox x:Name="txtEditLocation" Margin="10" />
                    <TextBox x:Name="txtEditCapacity" Margin="10" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,20,10,0">
                        <Button Content="Lưu" Width="120" Height="35" Background="#0078D4" Foreground="White" Click="SaveEditWarehouse_Click"/>
                        <Button Content="Hủy" Width="120" Height="35" Background="Gray" Foreground="White" Click="CancelEditWarehouse_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        <Grid x:Name="ViewWarehousePopup" Visibility="Collapsed" Background="#80000000"
              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
              Grid.RowSpan="2" Panel.ZIndex="10">
            <Border Background="White" BorderBrush="#ced4da" BorderThickness="1"
                    Padding="20" Width="400" CornerRadius="10"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Margin="10">
                    <TextBlock Text="Chi Tiết Kho Hàng" FontSize="20" FontWeight="Bold"
                               HorizontalAlignment="Center" Margin="0,10"/>
                    <TextBlock Text="Tên Kho:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtViewWarehouseName" Margin="10"/>
                    <TextBlock Text="Vị Trí:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtViewLocation" Margin="10"/>
                    <TextBlock Text="Sức Chứa:" FontWeight="Bold"/>
                    <TextBlock x:Name="txtViewCapacity" Margin="10"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,20,10,0">
                        <Button Content="Đóng" Width="120" Height="35" Background="#0078D4" Foreground="White" Click="CloseViewWarehousePopup_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Page>
